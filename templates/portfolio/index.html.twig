{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block body %}
<h1 class="mb-4 text-center">My Portfolio</h1>

<div class="row g-4">

    <!-- Carte Administrer -->
    <div class="col-md-4">
        <a href="/administrer" class="text-decoration-none">
            <div class="card portfolio-card bg-secondary text-light h-100 text-center">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h3 class="card-title">Administrer</h3>
                    <p class="card-text">Gérer et configurer des systèmes et réseaux.</p>
                </div>
            </div>
        </a>
    </div>

    <!-- Carte Connecter -->
    <div class="col-md-4">
        <a href="/connecter" class="text-decoration-none">
            <div class="card portfolio-card bg-secondary text-light h-100 text-center">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h3 class="card-title">Connecter</h3>
                    <p class="card-text">Établir et maintenir des connexions réseau fiables.</p>
                </div>
            </div>
        </a>
    </div>

    <!-- Carte Programmer -->
    <div class="col-md-4">
        <a href="/programmer" class="text-decoration-none">
            <div class="card portfolio-card bg-secondary text-light h-100 text-center">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h3 class="card-title">Programmer</h3>
                    <p class="card-text">Développer des applications et scripts pour automatiser.</p>
                </div>
            </div>
        </a>
    </div>

</div>

<style>
.portfolio-card {
    border-radius: 20px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.4);
    transition: transform 0.3s, background-color 0.3s;
    cursor: pointer;
}

.portfolio-card:hover {
    transform: translateY(-10px);
    background-color: #3a2a6a;
}

.portfolio-card .card-title {
    font-weight: bold;
    margin-bottom: 1rem;
}
</style>
{% endblock %}
