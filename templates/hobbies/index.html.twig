{% extends 'base.html.twig' %}

{% block title %}Mes hobbies{% endblock %}

{% block body %}
<div class="container my-5 text-light">

    <h1 class="text-center mb-5">Mes hobbies</h1>

    <div class="row g-4">

        <!-- Natation -->
        <div class="col-md-6 col-lg-3">
            <div class="card hobby-card text-center h-100">
                <img src="{{ asset('images/natation.jpg') }}"  {# Vérifie que le dossier s'appelle bien 'images' dans public #}
                     class="card-img-top"
                     alt="Natation">
                <div class="card-body">
                    <h5 class="card-title">Natation</h5>
                </div>
            </div>
        </div>

        <!-- Netflix -->
        <div class="col-md-6 col-lg-3">
            <div class="card hobby-card text-center h-100">
                <img src="{{ asset('images/netflix.jpg') }}"
                     class="card-img-top"
                     alt="Netflix">
                <div class="card-body">
                    <h5 class="card-title">Regarder Netflix</h5>
                </div>
            </div>
        </div>

        <!-- Lecture -->
        <div class="col-md-6 col-lg-3">
            <div class="card hobby-card text-center h-100">
                <img src="{{ asset('images/lecture.jpg') }}"
                     class="card-img-top"
                     alt="Lecture">
                <div class="card-body">
                    <h5 class="card-title">Lire</h5>
                </div>
            </div>
        </div>

        <!-- Manger -->
        <div class="col-md-6 col-lg-3">
            <div class="card hobby-card text-center h-100">
                <img src="{{ asset('images/manger.jpg') }}"
                     class="card-img-top"
                     alt="Manger">
                <div class="card-body">
                    <h5 class="card-title">Manger</h5>
                </div>
            </div>
        </div>

    </div>
</div>

{# CSS intégré pour les cards #}
<style>
.hobby-card {
    background-color: #2a184d;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 25px rgba(0,0,0,0.4);
    transition: transform 0.3s;
}
.hobby-card:hover {
    transform: translateY(-10px);
}
.hobby-card img {
    height: 200px;
    width: 100%;
    object-fit: cover;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
}
.card-title {
    font-weight: bold;
    color: #fff;
}
</style>
{% endblock %}

