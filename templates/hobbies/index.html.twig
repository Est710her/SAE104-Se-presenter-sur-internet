{% extends 'base.html.twig' %}

{% block title %}Mes hobbies{% endblock %}

{% block body %}
<div class="container my-5 text-light">

    <h1 class="text-center mb-5">Mes hobbies</h1>

    <div class="row g-4">

        {% set hobbies = [
            {'img': 'natation.jpg', 'title': 'Natation'},
            {'img': 'netflix.jpg',  'title': 'Regarder Netflix'},
            {'img': 'lecture.jpg',  'title': 'Lire'},
            {'img': 'manger.jpg',   'title': 'Manger'}
        ] %}

        {% for hobby in hobbies %}
            <div class="col-md-6 col-lg-3">
                <div class="card hobby-card text-center h-100">
                    <img
                        src="{{ asset('image/' ~ hobby.img) }}"
                        class="card-img-top"
                        alt="{{ hobby.title }}"
                        loading="eager"
                        onerror="this.src='{{ asset('image/natation.jpg') }}'">
                    <div class="card-body">
                        <h5 class="card-title">{{ hobby.title }}</h5>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
</div>

<style>
.hobby-card {
    background-color: #2a184d;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 25px rgba(0,0,0,0.4);
    transition: transform 0.3s ease;
}

.hobby-card:hover {
    transform: translateY(-8px);
}

.hobby-card img {
    height: 200px;
    width: 100%;
    object-fit: cover;
}
</style>
{% endblock %}
