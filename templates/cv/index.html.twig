{% extends 'base.html.twig' %}

{% block title %}Mon CV{% endblock %}

{% block body %}
<div class="container my-4 text-light text-center">

    <h1 class="mb-3">Mon CV</h1>

    <!-- PDF ajusté à une seule vue -->
    <div class="cv-container mx-auto">
        <iframe
            src="/pdf/cv_NKENE_NZAME_Djust_Esther.pdf.pdf"
            class="cv-frame">
        </iframe>
    </div>

    <!-- Bouton téléchargement -->
    <div class="mt-3">
        <a href="/pdf/cv_NKENE_NZAME_Djust_Esther.pdf.pdf"
           download
           class="violet-btn btn-lg">
            Télécharger mon CV
        </a>
    </div>

</div>

<style>
    .cv-container {
        max-width: 800px;   /* largeur raisonnable */
        height: 500px;      /* HAUTEUR FIXE → pas de scroll */
        margin: auto;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 25px rgba(0,0,0,0.4);
    }

    .cv-frame {
        width: 100%;
        height: 100%;
        border: none;
    }
</style>
{% endblock %}
